{
  "name": "ew-did-registry",
  "version": "0.0.0",
  "private": true,
  "description": "The javascript library client that can be used to manage decentralised identities on energy web chains",
  "main": "index.js",
  "scripts": {
    "test": "lerna run test",
    "test-rpc": "run-with-testrpc -m \"candy maple cake sugar pudding cream honey rich smooth crumble sweet treat\" --port 8544 --accounts 20 --networkId=9 --gasLimit=10000000 \"lerna run test \"",
    "setup": "lerna bootstrap --hoist --no-ci",
    "build": "rm -rf build docs packages/*/dist && lerna run compile && gulp",
    "compile": "lerna run compile",
    "ganache": "ganache-cli -m \"candy maple cake sugar pudding cream honey rich smooth crumble sweet treat\" --port 8544 --accounts 20 --networkId=9 --gasLimit=10000000",
    "browserTest:build": "gulp --gulpfile ./tests/gulpfile.js bundleApp",
    "browserTest:run": "run-with-testrpc -m \"candy maple cake sugar pudding cream honey rich smooth crumble sweet treat\" --port 8544 --accounts 20 --networkId=9 --gasLimit=10000000 \"karma start\"",
    "lint": "lerna run lint --parallel --stream -- -- --ignore-path=../../.eslintignore",
    "fix": "lerna run fix --parallel --stream",
    "publish:canary": "lerna publish --skip-git --cd-version=prerelease --pre-dist-tag prerelease --preid=alpha.$TRAVIS_BUILD_NUMBER --exact --yes",
    "publish:release": "lerna version --conventional-commits --exact --yes && lerna publish from-git --yes",
    "reset": "rm -rf node_modules package-lock.json build docs packages/*/node_modules packages/*/dist packages/*/package-lock.json"
  },
  "keywords": [
    "Energy",
    "EnergyWeb",
    "EW",
    "DID",
    "Registry",
    "DID Registry"
  ],
  "author": {
    "name": "EnergyWeb",
    "url": "https://www.energyweb.org/"
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@types/bl": "^2.1.0",
    "@types/chai": "^4.2.4",
    "@types/chai-as-promised": "^7.1.2",
    "@types/elliptic": "^6.4.10",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mocha": "^7.0.2",
    "@types/sjcl": "1.0.28",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "del": "^5.1.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-chai-friendly": "^0.5.0",
    "eslint-plugin-import": "^2.18.2",
    "ethers": "4.0.45",
    "ganache-cli": "6.9.1",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-replace": "^1.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-streamify": "^1.0.2",
    "gulp-typedoc": "^2.2.3",
    "gulp-uglify": "^3.0.2",
    "husky": "^3.1.0",
    "ipfs": "^0.42.0",
    "ipfsd-ctl": "^3.0.0",
    "karma": "^4.4.1",
    "karma-babel-preprocessor": "^8.0.1",
    "karma-browserify": "^7.0.0",
    "karma-chai": "^0.1.0",
    "karma-chai-as-promised": "^0.1.2",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^1.2.0",
    "karma-mocha": "^1.3.0",
    "lerna": "^3.20.2",
    "mocha": "^7.1.0",
    "prettier": "^2.0.4",
    "prettier-plugin-solidity": "^1.0.0-alpha.44",
    "run-with-testrpc": "^0.3.1",
    "truffle": "^5.1.16",
    "ts-node": "^8.6.2",
    "tsify": "^4.0.1",
    "typedoc": "^0.17.4",
    "typedoc-plugin-markdown": "^2.2.11",
    "typescript": "^3.7.2",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "web3": "1.2.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run fix && npm run compile"
    }
  }
}
