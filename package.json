{
  "name": "ew-did-registry",
  "version": "0.1.0",
  "description": "The javascript library client that can be used to manage decentralised identities on energy web chains",
  "main": "index.js",
  "scripts": {
    "test": "lerna run test",
    "test-rpc": "run-with-testrpc -m \"candy maple cake sugar pudding cream honey rich smooth crumble sweet treat\" --port 8544 --accounts 20 --networkId=9 --gasLimit=10000000 \"lerna run test\" ",
    "setup": "lerna bootstrap --hoist --no-ci",
    "build": "rm -rf build docs packages/*/dist && lerna run compile",
    "compile": "lerna run compile",
    "ganache": "ganache-cli -m \"candy maple cake sugar pudding cream honey rich smooth crumble sweet treat\" --port 8544 --accounts 20 --networkId=9 --gasLimit=10000000",
    "build:docs": "typedoc",
    "lint": "lerna run lint --parallel --stream -- -- --ignore-path=../../.eslintignore",
    "fix": "lerna run fix --parallel --stream",
    "publish:canary": "lerna publish --cd-version=prerelease --pre-dist-tag prerelease --preid=alpha.$RUN_NUMBER --exact --yes --no-verify-access --no-git-tag-version",
    "publish:release": "lerna version --conventional-commits --exact --yes && lerna publish from-git --yes --no-verify-access",
    "reset": "rm -rf node_modules package-lock.json build docs packages/*/node_modules packages/*/dist packages/*/build packages/*/package-lock.json"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:energywebfoundation/ew-did-registry.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "keywords": [
    "Energy",
    "EnergyWeb",
    "EW",
    "DID",
    "Registry",
    "DID Registry"
  ],
  "author": {
    "name": "EnergyWeb",
    "url": "https://www.energyweb.org/"
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@babel/core": "7.7.2",
    "@babel/polyfill": "7.7.0",
    "@babel/preset-env": "7.7.1",
    "@types/bl": "2.1.0",
    "@types/chai": "4.2.4",
    "@types/chai-arrays": "1.0.3",
    "@types/chai-as-promised": "7.1.2",
    "@types/deep-equal-in-any-order": "1.0.1",
    "@types/elliptic": "6.4.10",
    "@types/jsonwebtoken": "8.5.0",
    "@types/mocha": "7.0.2",
    "@types/sjcl": "1.0.28",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "babelify": "10.0.0",
    "bn.js": "5.2.0",
    "browserify": "16.5.0",
    "chai": "4.2.0",
    "chai-arrays": "2.2.0",
    "chai-as-promised": "7.1.1",
    "deep-equal-in-any-order": "1.0.28",
    "del": "5.1.0",
    "eslint": "^7.1.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-chai-friendly": "0.7.0",
    "eslint-plugin-import": "2.25.4",
    "ganache-cli": "^6.12.2",
    "gulp": "4.0.2",
    "gulp-babel": "8.0.0",
    "gulp-rename": "1.4.0",
    "gulp-replace": "1.0.0",
    "gulp-sourcemaps": "2.6.5",
    "gulp-streamify": "1.0.2",
    "gulp-typedoc": "^2.2.9",
    "gulp-uglify": "3.0.2",
    "husky": "3.1.0",
    "i": "0.3.7",
    "ipfs": "^0.58.3",
    "ipfsd-ctl": "3.0.0",
    "lerna": "4.0.0",
    "mocha": "7.1.0",
    "npm": "6.14.8",
    "prettier": "2.0.4",
    "prettier-plugin-solidity": "1.0.0-alpha.44",
    "run-with-testrpc": "0.3.1",
    "truffle": "^5.2.4",
    "ts-node": "8.6.2",
    "tsify": "4.0.1",
    "typedoc": "^0.20.34",
    "typedoc-plugin-markdown": "3.6.0",
    "typescript": "^4.2.3",
    "vinyl-buffer": "1.0.1",
    "vinyl-source-stream": "2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run fix && npm run compile"
    }
  }
}
