{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}